apiVersion: template.openshift.io/v1
kind: Template
metadata:
  creationTimestamp: null
  name: createnamesapcewolt
  annotations:
    openshift.io/display-name: "Create namesacpe - Wolt"
objects:
- apiVersion: v1
  kind: Namespace
  metadata:
    annotations:
      openshift.io/description: ${Description}
      openshift.io/display-name: ${Namespace}
      dana.hns.io/role: root
    creationTimestamp: null
    name: ${Namespace}
    labels:
      danav1alpha1.Hns: "True"
      namespace: ${Namespace}
  spec: {}
  status: {}
- apiVersion: quota.openshift.io/v1
  kind: ClusterResourceQuota
  metadata:
    name: "${Namespace}"
  spec:
    quota:
       hard:
         cpu: ${CpuQuota}
         memory: ${MemQuota}
    selector:
      labels:
        matchLabels:
                namespace: ${Namespace}
  status: {}
- apiVersion: rbac.authorization.k8s.io/v1
  kind: RoleBinding
  metadata:
    annotations: {}
    name: "${Namespace}"
    namespace: ${Namespace}
  roleRef:
    apiGroup: rbac.authorization.k8s.io
    kind: ClusterRole
    name: admin
  subjects:
  - kind: User
    name: "${AdminUser}"
    namespace: ${Namespace}
parameters:
- name: Namespace
  from: '[\d]{10}'
  description: Enter namespace name
- name: Description
  description: Enter namesapce Description
- name: CpuQuota
  description: Enter cpu cores quota to project
- name: MemQuota
  description: Enter mem quota to project (GB)MemQuota
- name: AdminUser
  description: Enter openshift user name that will add as admin to the project
